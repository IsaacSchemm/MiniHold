@if (Thermostat != null)
{
    <p align="center">
        Last updated:
        <br />
        @Thermostat.LastUpdated.ToLocalTime()
        <br />
        <button class="btn btn-primary mt-2" @onclick="Thermostat.Refresh">
            Refresh
        </button>
    </p>
}

@code {
    [Parameter]
    public ThermostatObject Thermostat { get; set; }
}
