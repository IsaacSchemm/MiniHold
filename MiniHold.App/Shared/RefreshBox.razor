@if (Thermostat != null)
{
    <p align="center">
        Last updated:
        <br />
        @Thermostat.LastUpdated.ToLocalTime()
        <br />
        <button class="btn btn-primary mt-2" @onclick="Thermostat.Refresh">
            Refresh
        </button>
    </p>

    <div title="Equipment Status">
        @foreach (string str in Thermostat.Information.EquipmentStatus)
        {
            <div class="badge bg-primary">
                @str
            </div>
            @:&nbsp;
        }
    </div>
}

@code {
    [Parameter]
    public ThermostatObject Thermostat { get; set; }
}
