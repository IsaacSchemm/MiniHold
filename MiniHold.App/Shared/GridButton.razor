@if (Disabled)
{
    <button class="btn btn-outline-secondary" style="grid-row: @Position.row; grid-column: @Position.col" disabled title="@Title">
        @Text
    </button>
} else
{
    <button class="btn btn-secondary @ClassName" style="grid-row: @Position.row; grid-column: @Position.col" @onclick="OnClick" title="@Title">
        @Text
    </button>
}

@code {
    [Parameter]
    public (int row, int col) Position { get; set; }
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string ClassName { get; set; }
    [Parameter]
    public bool Disabled { get; set; }
}
